---
const { title = "ricadmin.io", description = "" } = Astro.props;
import "../styles/bios.css";
const BASE = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <main>
      <div class="nav">
        <a href={`${BASE}`}>Inicio</a>
		<a href={`${BASE}linux`}>Linux</a>
		<a href={`${BASE}redes`}>Redes</a>
		<a href={`${BASE}virtualizacion`}>Virtualización</a>
		<a href={`${BASE}seguridad`}>Seguridad</a>
		<a href={`${BASE}proyectos`}>Proyectos</a>

      </div>

      <hr />
      <slot />
      <hr />

      <div class="small">© ricadmin.io</div>
    </main>
  </body>
</html>
